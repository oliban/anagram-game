# Anagram Game - Environment Configuration Template
# Copy this file to .env and update with your values

# Service Ports
GAME_SERVER_PORT=3000
WEB_DASHBOARD_PORT=3001
LINK_GENERATOR_PORT=3002
DATABASE_PORT=5432
ADMIN_SERVICE_PORT=3003

# Development Host Configuration
DEV_HOST=192.168.1.133  # Your local IP for device testing
LOCAL_HOST=localhost

# Database Configuration
DB_NAME=anagram_game
DB_USER=postgres
DB_PASSWORD=changeme  # Use 'localdev' for local development
DB_SSL=false

# Environment
NODE_ENV=development  # or 'production'

# Security Configuration
ADMIN_API_KEY=generate-secure-key-here
# Generate with: openssl rand -base64 32

# Security Settings (Development)
SECURITY_RELAXED=true  # Set to false in production
LOG_SECURITY_EVENTS=false  # Enable for debugging
SKIP_RATE_LIMITS=false  # Emergency override only