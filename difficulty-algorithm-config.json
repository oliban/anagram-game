    "veryEasy": "Very Easy",
    "easy": "Easy", 
    "medium": "Medium",
    "hard": "Hard",
    "veryHard": "Very Hard"
  },
  
  "algorithmParameters": {
    "wordCount": {
      "exponent": 1.5,
      "multiplier": 10.0
    },
    "letterCount": {
      "exponent": 1.2,
      "multiplier": 1.5
    },
    "commonality": {
      "multiplier": 25.0,
      "shortPhraseThreshold": 3,
      "shortPhraseDampening": 0.5
    },
    "minimumScore": 1.0
  },
  
  "textNormalization": {
    "en": {
      "regex": "[^a-z]",
      "description": "Keep only English letters"
    },
    "sv": {
      "regex": "[^a-zåäö]",
      "description": "Keep Swedish letters including å, ä, ö"
    }
  },
  
  "languageDetection": {
    "swedishCharacters": "[åäö]",
    "defaultLanguage": "en"
  }
}